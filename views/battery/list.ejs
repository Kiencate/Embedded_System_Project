<%- include ../layouts/header.ejs %> <% if (messages.error) { %>
<p style="color: red"><%- messages.error %></p>
<% } %> <% if (messages.success) { %>
<p style="color: green"><%- messages.success %></p>
<% } %>

<div style="text-align: center">
  <h1>Battery List</h1>
</div>

<!-- table -->
<div class="mx-auto mt-4">
  <table style="text-align: center" class="mx-auto" width="40%" border="1">
    <thead>
      <tr class="table" style="background-color: rgb(77, 177, 77)">
        <th scope="col">Battery ID</th>
        <th scope="col">Capacity</th>
        <th scope="col">Unit Price (VND)</th>
      </tr>
    </thead>
    <tbody>
      <% if (data) { %> <% data.forEach(function(battery){ %>
      <tr>
        <th scope="row"><%= battery.Id %></th>
        <td><%= battery.capacity %></td>
        <td><%= battery.unitPrice %></td>
      </tr>
      <% }) %> <% } %>
    </tbody>
    <!--
    Using FOREACH LOOP for the battery array
            
    myArray.forEach(function(el, index) {
      // el - current element, i - index
      });
    -->
  </table>
</div>

<%- include ../layouts/footer.ejs %>
