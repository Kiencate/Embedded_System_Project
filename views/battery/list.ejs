<%- include ../layouts/header.ejs %> <% if (messages.error) { %>
<p style="color: red"><%- messages.error %></p>
<% } %> <% if (messages.success) { %>
<p style="color: green"><%- messages.success %></p>
<% } %>

<div style="text-align: center">
  <h1>Battery List</h1>
</div>

<!-- table -->
<div class="mx-auto mt-4">
  <table style="text-align: center" class="mx-auto" width="30%" border="1">
    <tr style="text-align: center; background-color: rgb(77, 177, 77)">
      <th>Battery ID</th>
      <th>Unit Price (VND)</th>
    </tr>

    <!--
    Using FOREACH LOOP for the battery array
            
    myArray.forEach(function(el, index) {
      // el - current element, i - index
      });
    -->
    <% if (data) { %> <% data.forEach(function(battery){ %>
    <tr>
      <td><%= battery.Id %></td>
      <td><%= battery.unitPrice %></td>
    </tr>
    <% }) %> <% } %>
  </table>
</div>

