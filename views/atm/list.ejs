<%- include ../layouts/header.ejs %>

<div style="text-align: center">
  <h1>ATM List</h1>
</div>

<!-- table -->
<div class="mx-auto mt-4">
  <table style="text-align: center" class="mx-auto" width="30%" border="1">
    <thead>
      <tr class="table" style="background-color: rgb(77, 177, 77)">
        <th scope="col">ATM ID</th>
        <th scope="col">Location</th>
      </tr>
    </thead>
    <tbody>
      <% if (data) { %> <% data.forEach(function(atm){ %>
      <tr>
        <th scope="row"><%= atm.Id %></th>
        <td><%= atm.Location %></td>
      </tr>
      <% }) %> <% } %>
    </tbody>
    <!--
		Using FOREACH LOOP for the atm array
		
		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	  -->
  </table>
</div>

